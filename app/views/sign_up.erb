  <body>

    <div class="container">

      <form class="form-signin" action="/sign_up" method="POST">
        <h2 class="form-signin-heading">Let's Bolt This Up</h2>

        <label for="name" class="sr-only">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Full Name" required autofocus>

        <label for="username" class="sr-only">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username" required autofocus>

        <label for="email" class="sr-only">Email address</label>
        <input type="email" name="email" class="form-control" placeholder="Email address" required autofocus>

        <label for="password" class="sr-only">Password</label>
        <input type="text" name="password" class="form-control" placeholder="Password" required autofocus>

         <select name="bolt_connection" class="form-control">
          <option disabled="disabled" selected="selected">How do you know Bolt?</option>
          <option value="mother">Mother</option>
          <option value="cousin">Cousin</option>
          <option value="coworker">Coworker</option>
          <option value="friend">Friend</option>
        </select>

        <label for="birthday" >Birthday</label>
        <input type="date" name="birthday" class="specialInput" placeholder="birthday" required autofocus><br/>

        <label id="pic" for="profile_picture" >Profile Picture</label>
        <input id="pic" type="file" name="profile_picture" class="specialInput" required autofocus>

        <button class="btn btn-lg btn-primary btn-block" id="button" type="submit">Sign up</button>
      </form>

    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
